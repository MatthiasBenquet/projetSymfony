{% extends 'liste.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block h1 %}Liste de tous les stages{% endblock %}

{% block boutons %}
	<a class="btn btn-primary" href={{path('pro_stage_entreprises')}} role="button">Filtrer par entreprise</a>
	<a class="btn btn-primary" href={{path('pro_stage_formations')}} role="button">Filtrer par formation</a>
{% endblock %}

{% block elements %}
	{# Affichage des stages Ã  partir de la bdd #}
	{% for stage in stages %}
