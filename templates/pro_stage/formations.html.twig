{% extends 'liste.html.twig' %}

{% block title %}Formations{% endblock %}

{% block h1 %}Liste de toutes les formations proposant des stages{% endblock %}

{% block formationsActif %}active{% endblock %}

{% block elements %}

	{# génération des éléments à partir de la bdd #}
	{% for formation in formations %}
		<li class="list-group-item">
			<a href="{{path('pro_stage_stages_par_formation', {nomFormation:formation.nom})}}">
				{{formation.nom}}
			</a>
		</li>
	{% endfor %}

{% endblock %}
