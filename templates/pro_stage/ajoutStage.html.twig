{% extends 'base.html.twig' %}

{% block title %}
{% if action == "ajouter" %}
Ajout d'un stage
{% else %}
Modification d'un stage
{% endif %}
{% endblock %}

{% block ajoutStageActif %}
{# pour déterminer si le menu doit être ciblé ou non #}
{% if action == "ajouter" %}
active
{% endif %}
{% endblock %}

{% block body %}
{% if action == "ajouter" %}
<h1>Saisissez les caractéristiques du stage que vous voulez ajouter.</h1>
{% else %}
<h1>Saisissez les nouvelles caractéristiques du stage choisie.</h1>
{% endif %}

{{ form_start(vueFormulaire, {'attr':{'novalidate':"novalidate"}}) }}

{{ form_row(vueFormulaire.nom, {'attr':{'placeholder':"Nom du stage . . ."}}) }}

{{ form_row(vueFormulaire.description, {'attr':{'placeholder':"Description du stage . . ."}}) }}

{{ form_row(vueFormulaire.dateDebut, {'attr':{'placeholder':"Date de début du stage . . ."}}) }}

{{ form_row(vueFormulaire.duree, {'attr':{'placeholder':"Durée du du stage . . ."}}) }}

{{ form_row(vueFormulaire.competencesRequises, {'attr':{'placeholder':"Compétences requises . . ."}}) }}

{{ form_row(vueFormulaire.experienceRequise, {'attr':{'placeholder':"Expérience requise . . ."}}) }}

{{ form_row(vueFormulaire.email, {'attr':{'placeholder':"Adresse mail de contact . . ."}}) }}

{{ form_row(vueFormulaire.contact, {'attr':{'placeholder':"Nom et prénom du contact . . ."}}) }}

{{ form_row(vueFormulaire.entreprise, {'attr':{'placeholder':"Entreprise . . ."}}) }}

{{ form_row(vueFormulaire.formations, {'attr':{'placeholder':"Formations concernées . . ."}}) }}

{% if action == "ajouter" %}
<button type="submit" class="btn btn-dark">Ajouter</button>
{% else %}
<button type="submit" class="btn btn-dark">Modifier</button>
{% endif %}

{{ form_end(vueFormulaire) }}

{% endblock %}
