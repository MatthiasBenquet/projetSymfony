{% extends 'liste.html.twig' %}

{% block title %}Entreprises{% endblock %}

{% block h1 %}Liste de toutes les entreprises{% endblock %}

{% block elements %}

	{# génération des éléments à partir de la bdd #}
	{% for entreprise in entreprises %}
		<li class="list-group-item">
			<div class="row">
				<div class="col-md-3">
					<a href="{{path('pro_stage_stages_par_entreprise', {nomEntreprise:entreprise.nom})}}">
						{{entreprise.nom}}
					</a>
				</div>
				<div class="col-md-3">
					{{entreprise.adresse}}
				</div>
				<div class="col-md-3">
					{{entreprise.urlSiteWeb}}
				</div>
				<div class="col-md-3">
					{{entreprise.telephone}}
				</div>
			</div>
		</li>
	{% endfor %}

{% endblock %}
